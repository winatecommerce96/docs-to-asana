# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/asana_brief_creation
DB_PASSWORD=

# Asana
ASANA_ACCESS_TOKEN=your_asana_access_token_here
ASANA_WORKSPACE_ID=your_workspace_id_here

# Asana OAuth (optional - for admin UI)
ASANA_CLIENT_ID=your_oauth_client_id_here
ASANA_CLIENT_SECRET=your_oauth_client_secret_here
ASANA_OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback

# Default Target Project/Section
ASANA_TARGET_PROJECT_GID=1206874746809992
ASANA_TARGET_SECTION_GID=1206874104264005

# AI Provider (choose "anthropic" or "openai")
AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=claude-sonnet-4-20250514

# Google Docs API
GOOGLE_DOCS_CREDENTIALS_PATH=/path/to/google-service-account.json
# OR for Cloud Run, store the JSON as a string:
# GOOGLE_DOCS_CREDENTIALS_PATH={"type":"service_account",...}

# Application
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ENVIRONMENT=development

# CORS
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:8000
FRONTEND_URL=http://localhost:3001

# Logging
LOG_LEVEL=INFO
DEBUG=false
